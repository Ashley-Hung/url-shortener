<div class="container">
  <h1>URL Shrinker</h1>
  <form action="/shortUrls" method="post" class="my-4 form-inline">
    <label for="fullUrl" class="sr-only">URL</label>
    <input type="url" name="fullUrl" id="fullUrl" placeholder="URL" class="form-control col mr-2" required>
    <button type="submit" class="btn btn-primary">Shrink</button>
  </form>

  <table>
    <thead>
      <tr>
        <th>Full URL</th>
        <th>Short Url</th>
        <th>Clicks</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><a href="https://google.com">https://google.com</a></td>
        <td><a href="/12345">12345</a></td>
        <td>10</td>
      </tr>
    </tbody>
  </table>
</div>