<div class="container my-5">
  <h1 class="text-center">URL Shortener</h1>
  <form action="/shortUrls" method="post" class="my-4 form-inline">
    <label for="fullUrl" class="mr-2 col-2">Full URL：</label>
    <input type="url" name="fullUrl" id="fullUrl" placeholder=" Shorten your link" class="form-control col mr-2" {{#if fullUrl}}value="{{fullUrl}}"{{/if}} required>
    <button type="submit" class="btn btn-primary col-1">Shorten</button>
  </form>

  <div class="form-inline">
    <label for="shortUrl" class="mr-2 col-2">Short URL：</label>
    <input type="url" name="shortUrl" id="shortUrl" class="form-control col mr-2" {{#if shortUrl}}value="https://gentle-springs-80779.herokuapp.com/{{shortUrl}}"{{/if}} style="background: white;" readonly>
    <button class="btn btn-outline-success col-1" onclick="copyUrl()"><i class="far fa-copy mr-2"></i>Copy</button>
  </div>

  <table class="table table-striped table-bordered text-center mt-5">
    <thead>
      <tr>
        <th>Full URL</th>
        <th>Short URL</th>
      </tr>
    </thead>
    {{#each url}}
    <tbody>
      <tr>
        <td><a href="{{this.full}}">{{this.full}}</a></td>
        <td><a href="/{{this.short}}">https://gentle-springs-80779.herokuapp.com/{{this.short}}</a></td>
      </tr>
    </tbody>
    {{/each}}
  </table>
</div>