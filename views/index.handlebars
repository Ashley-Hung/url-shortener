<div class="container mt-5">
  <h1>URL Shrinker</h1>
  <form action="/shortUrls" method="post" class="my-4 form-inline">
    <label for="fullUrl" class="sr-only">URL</label>
    <input type="url" name="fullUrl" id="fullUrl" placeholder="URL" class="form-control col mr-2" required>
    <button type="submit" class="btn btn-primary">Shrink</button>
  </form>

  <table class="table table-striped table-bordered text-center mt-5">
    <thead>
      <tr>
        <th>Full URL</th>
        <th>Short Url</th>
      </tr>
    </thead>
    {{#each url}}
    <tbody>
      <tr>
        <td><a href="{{this.full}}">{{this.full}}</a></td>
        <td><a href="/{{this.short}}">https://gentle-springs-80779.herokuapp.com/s/{{this.short}}</a></td>
      </tr>
    </tbody>
    {{/each}}
  </table>
</div>